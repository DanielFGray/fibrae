{
  "name": "didact",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalog": {
      "@effect-atom/atom": "^0.4.1",
      "@effect/language-service": "^0.55.3",
      "@effect/platform": "^0.93.0",
      "@effect/platform-browser": "^0.73.0",
      "@effect/platform-bun": "^0.83.0",
      "@effect/platform-node": "^0.100.0",
      "effect": "^3.19.3",
      "typescript": "^5.9.3"
    }
  },
  "scripts": {
    "dev": "mprocs zsh 'bun dev:demo' 'bun run test' 'bun build:watch'",
    "dev:demo": "bun --filter demo dev:server",
    "test": "bun --filter demo cypress:open --e2e --browser=chromium",
    "cypress:run": "cd packages/demo && bun cypress:run",
    "cypress:open": "cd packages/demo && bun cypress:open",
    "build": "run-s build:core",
    "build:watch": "bun --filter '@didact/core' build:watch",
    "build:core": "bun --filter '@didact/core' build",
    "types:check": "bun --workspaces types:check",
    "types:watch:core": "cd packages/didact; run-s types:watch",
    "types:watch:demo": "cd packages/demo; run-s types:watch",
    "types:watch": "run-p types:watch:core types:watch:demo",
    "ssr:demo": "bun --filter @didact/core build && bun --filter demo ssr",
    "lint": "eslint"
  },
  "dependencies": {
    "@effect-atom/atom": "0.3.4",
    "@effect/platform": "^0.93.0",
    "@effect/platform-browser": "^0.73.0",
    "@effect/platform-bun": "^0.83.0",
    "@effect/platform-node": "^0.100.0",
    "mprocs": "^0.7.3",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "typescript-eslint": "^8.46.4"
  },
  "overrides": {
    "effect": "catalog:"
  }
}
