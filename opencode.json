{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "firefox-devtools": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "firefox-devtools-mcp@latest",
        "--headless",
        "--viewport",
        "1280x720"
      ],
      "environment": {
        "START_URL": "about:home"
      }
    },
    "effect-docs": {
      "type": "local",
      "command": [
        "bunx",
        "effect-mcp@latest"
      ],
      "enabled": true
    },
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true
    }
  }
}
