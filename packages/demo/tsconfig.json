{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "emitDeclarationOnly": false,
    // IMPORTANT: Do NOT add "jsxImportSource" here!
    // Vite uses classic JSX transform with manual injection (see vite.config.ts esbuild settings).
    // Adding jsxImportSource causes: "importSource cannot be set when runtime is classic"
    "jsx": "preserve",
    "types": ["vite/client", "cypress", "fibrae/jsx-runtime", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "**/*.test.*"]
}
